<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeMapActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" />

    </com.google.android.material.appbar.AppBarLayout>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_loc"
        android:text="Opend/Close to Locate"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:background="@drawable/inputs"
        android:layout_gravity="right"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/inputs"
        android:hint="enter phone of your friend !"
        android:id="@+id/enter_phone"
        android:textStyle="bold"
        android:textSize="15sp"
        android:inputType="phone"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/show_friend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Show Friend"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_rounds"
                />
            <Button
                android:id="@+id/show_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Show All Friends"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_rounds"
                />


        </LinearLayout>
</LinearLayout>